<%- include layouts/header.ejs %>

    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="h1">
                <%=page_title%>
            </h1>
        </div>
    </div>

    
        <form method="post" action="/employers/save">
            <div class="col-lg-16">
                        <div class="form-group col-lg-12">
                            <label for="name">
                        Employers Name <input class="form-control col-lg-12" type="text" name="name" required>
                        </label>
                        </div>

                        <div class="form-group col-lg-12">
                            <label for="address">
                        Address <textarea class="form-control col-lg-12" type="text" name="address" required cols="30" rows="5"></textarea>
                        </label>
                        </div>

                        <div class="form-group col-lg-12">
                            <label for="email">
                        Email <input class="form-control col-lg-12" type="text" name="email" />
                        </label>
                        </div>

                        <div class="form-group col-lg-12">
                            <label for="phone">
                        Phone <input class="form-control col-lg-12" type="text" name="phone" required/>
                        </label>
                        </div>

                        <div class="col-lg-12">
                        <input type="submit" class="btn" name="submit" value="Save">
                        <input type="button" class="btn" name="cancel" value="Cancel" onClick="cancelEmployers()">
                        </div>
 </div>
        </form>

   

    <%- include layouts/footer.ejs %>